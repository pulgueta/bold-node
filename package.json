{
  "name": "@pulgueta/bold",
  "description": "Node.js Bold SDK",
  "version": "1.0.1",
  "author": "Andrés Rodríguez",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/pulgueta/bold-node",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pulgueta/bold-node.git"
  },
  "bugs": {
    "url": "https://github.com/pulgueta/bold-node/issues"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "lint": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "keywords": [
    "bold",
    "bold-node",
    "payments",
    "bold-colombia",
    "bold-payments"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.10.9",
    "semantic-release": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.2",
  "peerDependencies": {
    "zod": "^4.3.6"
  }
}
